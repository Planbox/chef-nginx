log_format  global  '$host - $remote_addr - $remote_user [$time_local]  $status '
                    '"$request" $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';
log_format  slim    '$remote_user@$remote_addr [$time_local]  $status $body_bytes_sent "$request"'
                    '"$http_referer" "$http_user_agent"';
